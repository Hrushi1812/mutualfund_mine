# ===========================================
# Backend Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=mutual_funds

# JWT Secret (used for authentication tokens)
# Generate a secure key for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# CORS Origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# Fyers API Configuration (Required for live stock data)
# Get credentials from: https://myapi.fyers.in
# ===========================================
FYERS_APP_ID=your_app_id_here
FYERS_SECRET_KEY=your_fyers_secret_key_here
FYERS_REDIRECT_URI=http://localhost:8000/api/fyers/callback

# ===========================================
# Email Configuration (Brevo - for password reset emails)
# Get API key from: https://app.brevo.com → Settings → SMTP & API
# Leave empty for dev mode (emails logged to console)
# ===========================================
BREVO_API_KEY=your_brevo_api_key_here
BREVO_FROM_EMAIL=noreply@yourdomain.com
BREVO_FROM_NAME=MutualFund Tracker

# Frontend URL (used for password reset links)
FRONTEND_URL=http://localhost:5173

